package practice;

public class Practice1 {
	public static int evelength(int a[]) {
		int count = 0;

		for (int i = 0; i < 10; i++) {
			if (a[i] % 2 == 0)
				count++;
		}
		return count;
	}

	public static int oddlength(int a[]) {
		int count1 = 0;
		for (int i = 0; i < 10; i++) {
			if (a[i] % 2 != 0)
				count1++;

		}
		return count1;
	}

	public static void evenoddarrlength(int a[], int evenlen, int oddlen) {
		int even[] = new int[evenlen];
		int odd[] = new int[oddlen];
		int j = 0;
		int k = 0;
		for (int i = 0; i < 10; i++) {
			if (a[i] % 2 == 0) {
				even[j] = a[i];
				j++;
			} else {
				odd[k] = a[i];
				k++;
			}
		}
		for (int i = 0; i < evenlen; i++) {

			System.out.print(even[i]);

		}
		System.out.println();
		for (int i = 0; i < oddlen; i++) {

			System.out.print(odd[i]);

		}
	}

	public static void main(String[] args) {
		int a[] = { 1, 2, 3, 4, 5, 6, 7, 8, 4, 6 };
		int j = 0;
		int k = 0;
		int eve = evelength(a);
		int odd = oddlength(a);
		evenoddarrlength(a, eve, odd);

	}

}
